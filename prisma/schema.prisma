datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  passwordHash String
  posts        Post[]
  comments     Comment[]
  createdAt    DateTime       @default(now())
  RefreshToken RefreshToken[]
}

model Post {
  id        Int       @id @default(autoincrement())
  author    User      @relation(fields: [authorId], references: [id])
  authorId  Int
  title     String
  content   String
  comments  Comment[]
	toxicity  Float     @default(0)
  createdAt DateTime  @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  content   String
	toxicity  Float    @default(0)
  createdAt DateTime @default(now())
}

model RefreshToken {
  userId    Int
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, token])
  @@index([expiresAt], map: "idx_expire")
}

model Blacklist {
	id        Int      @id @default(autoincrement())
	token     String   @unique
	expiresAt DateTime
}
